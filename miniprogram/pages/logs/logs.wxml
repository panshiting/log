<!--pages/logs/logs.wxml-->
<view>
  <ul class="mood-list">
    <li class="mood-item" wx:for="{{moodList}}" wx:key="{{index}}">
      <view>
        <view class="mood-item-img">
          <image wx:if="{{item.imageUrl && item.imageUrl.length > 0}}" src="{{item.imageUrl[0]}}"></image>
          <image wx:else src="../../images/logo.jpg"></image>
        </view>
        <view class="mood-item-content">
          <view class="mood-item-time">
            <text>{{item.time}}</text>
          </view>
          <view class="msg">
            <text>{{item.message}}</text>
          </view>
        </view>
      </view>
      <view class="btn">
        <text class="edit" bindtap="handleEdit" data-id="{{item._id}}">修改</text>
        <text class="del" bindtap="handleDelete" data-id="{{item._id}}">删除</text>
      </view>
    </li>
  </ul>
</view>
