/* pages/logs/logs.wxss */

/* 列表样式 */
.mood-list {
  width: 100%;
  margin: 0 auto;
}
.empty-warp {
  width: 200px;
  height: 200px;
  margin-left: 50%;
  margin-top: 50vh;
  transform: translate(-50%, -50%);
}
.empty {
  width: 183px;
  height: 122px;
  margin-bottom: 10px;
}
.empty image {
  width: 100%;
  height: 100%;
}
.tip {
  font-size: 14px;
  color: #666666;
}
.mood-warp {
  display: inline-block;
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.mood-item {
  display: flex;
}
.mood-warp:last-child {
  margin-bottom: 20rpx;
}
.mood-item-img {
  display: inline-block;
  width: 30%;
  height: 160rpx;
  border-radius: 50%;
}
image {
  width: 100%;
  height: 100%;
}
.mood-item-content {
  flex: 1;
  display: inline-block;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.mood-item-content:after {
  content: '';
  clear: both;
  display: table;
}
.mood-item-time {
  font-size: 30rpx;
}
.msg {
  margin: 10rpx 0;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  word-wrap: break-word;
  white-space: normal !important;
}
.btn {
  font-size: 30rpx;
  text-align: right;
}
.btn > text {
  margin-left: 20rpx;
  padding: 4rpx 16rpx;
  line-height: 44rpx;
  text-align: center;
}
.edit {
  color: #509aff;
  border: 1px solid #509aff;
  border-radius: 4px;
}
.del {
  color: #f35607;
  border: 1px solid #f35607;
  border-radius: 4px;
}