/* pages/addLogs/addLogs.wxss */
.add-mood {
  position: relative;
}
.add-image {
  width: 100%;
  height: 220px;
}
.add-image image {
  width: 100%;
  height: 100%;
}
.tip {
  display: inline-block;
  position: absolute;
  top: 100px;
  left: 50%;
  transform: translateX(-50%);
  color: #ebebec;
  font-size: 13pt;
}
.msg {
  display: inline-block;
  box-sizing: border-box;
  width: calc(100% - 20px);
  height: 250px;
  padding: 10px;
  margin: 10px 10px 0 10px;
  overflow: hidden;
  /* background: #ebebec; */
  color: #333;
}
.place-class {
  display: inline-block;
  font-size: 14px;
  color: #999;
  margin: 5px;
}
.save {
  position: fixed;
  display: inline-block;
  width: 80%;
  bottom: 20px;
  left: 10%;
  font-size:16px;  
  color:#333;
  background: #fff;
  border-radius: 0;
}