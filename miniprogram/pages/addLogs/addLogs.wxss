/* pages/addLogs/addLogs.wxss */
.add-mood {
  position: relative;
}
.add-image {
  width: 100%;
  height: 220px;
}
.add-image image {
  width: 100%;
  height: 100%;
}
.tip {
  display: inline-block;
  position: absolute;
  top: 100px;
  left: 50%;
  transform: translateX(-50%);
  color: #ebebec;
  font-size: 13pt;
}
.msg {
  display: inline-block;
  box-sizing: border-box;
  width: calc(100% - 20px);
  height: 200px;
  padding: 10px;
  margin: 10px 10px 0 10px;
  overflow: hidden;
  /* background: #ebebec; */
  color: #333;
}
.place-class {
  display: inline-block;
  font-size: 14px;
  color: #999;
  margin: 5px;
}
.btn-submit {
	z-index: 1;
	position: fixed;
  left: 30rpx;
  bottom: 40rpx;
  width: calc(100% - 60rpx);
	padding: 0;
	height: 90rpx;
	line-height: 90rpx;
	font-size: 32rpx;
	color: #ffffff;
	background-color: #0e948a;
	box-shadow: 0rpx 11rpx 21rpx 0rpx 
		rgba(55, 123, 241, 0.25);
	border-radius: 4rpx;
}